<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rhythmRoundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="round"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:id="@+id/rhythmRoundTimeNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:visibility="visible"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_below="@+id/rhythmRoundTextView"
        android:layout_toRightOf="@+id/rhythmRoundTextView"
        android:layout_toEndOf="@+id/rhythmRoundTextView" />

</RelativeLayout>